<% if @actions.any? %>
<li class="dropdown">
<a href="#" class="dropdown-toggle" data-toggle="dropdown">Actions <b class="caret"></b></a>
<ul class="dropdown-menu">
  <% @actions.each do |action| %>
    <li><a href="<%= url_for :action => action, :controller => "/#{action_controller_for @plugin}" %>"><%= action.to_s.titleize %></a></li>
  <% end %>
</ul>
</li>
<% end %>