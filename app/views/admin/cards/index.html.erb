<h2>Data Cards</h2>

<%= table_for @cards, ["Title", "Last Updated", ""] do |card| %>
  <tr>
    <td><%= link_to card.title, edit_admin_card_path(card) %></td>
    <td><%= card.updated_at.to_s :humane %></td>
    <td><%= delete_button admin_card_path(card) %></td>
  </tr>
<% end %>

