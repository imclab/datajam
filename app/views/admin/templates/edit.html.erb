<h2>Edit Template</h2>

<% form_for @template, url: admin_template_path(@template), method: :put do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.text_area :template, class: 'code', rows: 20, cols: 100 %>
  <%= f.submit 'Update' %>
<% end %>

<h3>Detected Template Fields</h3>
<ul>
  <% @template.custom_fields.each do |f| -%>
  <li><%= f %></li>
  <% end -%>
</ul>
